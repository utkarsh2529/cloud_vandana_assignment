function bubbleSortDescending(arr) {
  var n = arr.length;
  for (var i = 0; i < n - 1; i++) {
    for (var j = 0; j < n - i - 1; j++) {
      if (arr[j] < arr[j + 1]) {
        // Swap arr[j] and arr[j + 1]
        var temp = arr[j];
        arr[j] = arr[j + 1];
        arr[j + 1] = temp;
      }
    }
  }
  return arr;
}

var numbers = [4, 2, 9, 5, 1];
var sortedDescending = bubbleSortDescending(numbers);
console.log(sortedDescending); 
